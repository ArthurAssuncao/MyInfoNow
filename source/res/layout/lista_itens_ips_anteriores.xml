<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lista_linha_itens_tabela_precos_lista_linha"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/lista_itens_ips_anteriores_ip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textColor="@android:color/white" >
    </TextView>

    <TextView
        android:id="@+id/lista_itens_ips_anteriores_data_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lista_itens_ips_anteriores_ip"
        android:textSize="7pt"
        android:textStyle="italic"
        android:textColor="@android:color/white" />

</RelativeLayout>